<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/layout_accessories_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/image_showcase"
        />

    <ImageView
        android:id="@+id/layout_accessories_button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add_shopping_cart_accent_36dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_accessories_image"
        app:layout_constraintTop_toTopOf="@+id/layout_accessories_image"
        />
    
    <TextView
        android:id="@+id/layout_accessories_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout_accessories_image"
        app:layout_constraintTop_toBottomOf="@id/layout_accessories_image"
        tools:text="Мышка\nбеспроводная Apple mous"
        />

    <TextView
        android:id="@+id/layout_accessories_price_current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textColor="?colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout_accessories_image"
        app:layout_constraintTop_toBottomOf="@id/layout_accessories_title"
        tools:text="44 990 ₸"
        />

    <TextView
        android:id="@+id/layout_accessories_price_old"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout_accessories_image"
        app:layout_constraintTop_toBottomOf="@id/layout_accessories_price_current"
        tools:text="44 990 ₸"
        />

</androidx.constraintlayout.widget.ConstraintLayout>